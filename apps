#!/usr/bin/env bash

set -e

apps=(
    "zsh"
    "nvim"
    "git"
    "docker"
    "rust"
    "alacritty"
    "tmux"
)

for app in "${apps[@]}"; do
    echo "Initializing $app"
    bash "./$app/init"

    if [[ -f "./$app/test" ]]; then
        echo "Testing $app"
        bash "./$app/test"
    fi

    echo "Finished initializing $app"
done
